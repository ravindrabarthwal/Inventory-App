<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.ravindrabarthwal.inserve">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddItem"
            android:label="Add Product" />

        <provider
            android:name=".data.InServeProvider"
            android:authorities="me.ravindrabarthwal.inserve"
            android:exported="false" />

        <activity
            android:name=".ProductDetail"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ModifyQuantity"
            android:label="Modify Quantity"></activity>
    </application>

</manifest>